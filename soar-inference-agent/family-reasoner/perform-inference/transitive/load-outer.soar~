sp {transitive*propose*load-outer
   (state <s> ^name transitive
             -^to-load
              ^outer-property-ptr <ptr>)
   (<ptr> -^propertyName)
-->
   (<s> ^operator <op> + =)
   (<op> ^name load-outer
         ^to-load <ptr>)
}

sp {transitive*apply*load-outer
   (state <s> ^name transitive
         ^operator <op>)
   (<op> ^name load-outer
         ^to-load <ptr>) 
-->
   (<s> ^to-load <ptr>)
   (write |DEBUG> Added job to load outer property ptr for transitive check.| (crlf))
}
